{
  "buildCommand": "npm run build",
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.6.2",
      "includeFiles": [
        "app/**",
        "bootstrap/**",
        "config/**",
        "public/**",
        "routes/**",
        "resources/**",
        "storage/**",
        "artisan",
        "composer.json",
        "composer.lock"
      ],
      "excludeFiles": [
        "node_modules/**",
        "tests/**",
        ".github/**"
      ]
    }
  },
  "routes": [
    { "src": "/(css|js|img|storage|favicon.ico|robots.txt)(/.*)?", "dest": "/public/$1$2" },
    { "src": "/build/(.*)", "dest": "/public/build/$1" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}
